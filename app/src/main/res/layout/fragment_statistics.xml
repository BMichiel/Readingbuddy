<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pages read today"
                android:textColor="?attr/TitleColor"
                android:textSize="23sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0/50"
                android:textColor="?attr/TitleColor"
                android:id="@+id/Day_pages_read"
                android:textSize="20sp"
                android:gravity="center"/>

            <ProgressBar
                android:id="@+id/Day_pages_read_progress_bar"
                style="?android:progressBarStyleHorizontal"
                android:max="1000"
                android:progress="0"
                android:secondaryProgress="1000"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This month"
                android:textColor="?attr/TitleColor"
                android:textSize="23sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Pages"
                            android:textColor="?attr/TitleColor"
                            android:textSize="20sp"
                            android:gravity="center"/>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            >

                            <ProgressBar
                                android:id="@+id/Month_pages_read_progress_bar"
                                style="?android:progressBarStyleHorizontal"
                                android:max="1000"
                                android:progress="0"
                                android:secondaryProgress="1000"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:layout_gravity="center"
                                android:progressDrawable="@drawable/loading_circle"
                                />


                            <TextView
                                android:id="@+id/Month_pages_read"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0/1000"
                                android:textColor="?attr/TextColor"
                                android:textSize="20sp"
                                android:layout_marginBottom="15dp"
                                android:layout_gravity="center"
                                />

                            <TextView
                                android:id="@+id/Month_ppm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 ppm"
                                android:textColor="?attr/TextColor"
                                android:textSize="20sp"
                                android:layout_marginTop="15dp"
                                android:layout_gravity="center"
                                />
                        </FrameLayout>

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Books"
                        android:textColor="?attr/TitleColor"
                        android:textSize="20sp"
                        android:gravity="center"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        >

                        <ProgressBar
                            android:id="@+id/Month_Books_Read_ProgressBar"
                            style="?android:progressBarStyleHorizontal"
                            android:max="1000"
                            android:progress="0"
                            android:secondaryProgress="1000"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:progressDrawable="@drawable/loading_circle"
                            />


                        <TextView
                            android:id="@+id/Month_Books_Read"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/10"
                            android:textColor="?attr/TextColor"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:id="@+id/Month_Time_Read"
                android:textColor="?attr/TextColor"
                android:textSize="18sp"
                android:gravity="center"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:animateLayoutChanges="true"
                android:background="@drawable/round_rectangle">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Favourite books of the month"
                    android:textColor="?attr/TitleColor"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true"
                    android:gravity="center"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="Title"
                                android:textColor="?attr/TextColor"
                                android:id="@+id/Month_favourite_Book1_Title"/>

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_height="130dp"
                                android:id="@+id/Month_favourite_Book1"
                                android:src="@drawable/book"
                                android:tint="?attr/colorAccent"
                                android:background="@drawable/round_rectangle"
                                android:elevation="6dp"
                                />

                            <RatingBar
                                android:id="@+id/Month_favourite_Book1_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxWidth="150dp"
                                android:numStars="5"
                                android:stepSize="0.5"

                                android:progressTint="?attr/starColor"
                                android:secondaryProgress="?attr/starColor"
                                android:secondaryProgressTint="?attr/starColorAccent"
                                android:progressBackgroundTint="@color/Light_Grey"

                                style="@style/Widget.AppCompat.RatingBar.Small"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="Title"
                                android:textColor="?attr/TextColor"
                                android:id="@+id/Month_favourite_Book2_Title"/>

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_height="130dp"
                                android:id="@+id/Month_favourite_Book2"
                                android:src="@drawable/book"
                                android:tint="?attr/colorAccent"
                                android:background="@drawable/round_rectangle"
                                android:elevation="6dp"
                                />

                            <RatingBar
                                android:id="@+id/Month_favourite_Book2_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxWidth="150dp"
                                android:numStars="5"
                                android:stepSize="0.5"

                                android:progressTint="?attr/starColor"
                                android:secondaryProgress="?attr/starColor"
                                android:secondaryProgressTint="?attr/starColorAccent"
                                android:progressBackgroundTint="@color/Light_Grey"

                                style="@style/Widget.AppCompat.RatingBar.Small"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="Title"
                                android:textColor="?attr/TextColor"
                                android:id="@+id/Month_favourite_Book3_Title"/>

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_height="130dp"
                                android:id="@+id/Month_favourite_Book3"
                                android:src="@drawable/book"
                                android:tint="?attr/colorAccent"
                                android:background="@drawable/round_rectangle"
                                android:elevation="6dp"
                                />

                            <RatingBar
                                android:id="@+id/Month_favourite_Book3_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxWidth="150dp"
                                android:numStars="5"
                                android:stepSize="0.5"

                                android:progressTint="?attr/starColor"
                                android:secondaryProgress="?attr/starColor"
                                android:secondaryProgressTint="?attr/starColorAccent"
                                android:progressBackgroundTint="@color/Light_Grey"

                                style="@style/Widget.AppCompat.RatingBar.Small"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Average rating"
                        android:textColor="?attr/TitleColor"
                        android:textSize="20dp"/>


                    <RatingBar
                        android:id="@+id/Month_avg_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="150dp"
                        android:numStars="5"
                        android:stepSize="0.5"

                        android:progressTint="?attr/starColor"
                        android:secondaryProgress="?attr/starColor"
                        android:secondaryProgressTint="?attr/starColorAccent"
                        android:progressBackgroundTint="@color/Light_Grey"
                        android:isIndicator="true"
                        />


                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/TitleColor"
                android:textStyle="bold"
                android:textSize="23sp"
                android:text="This year"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Pages"
                            android:textColor="?attr/TitleColor"
                            android:textSize="20sp"
                            android:gravity="center"/>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            >

                            <ProgressBar
                                android:id="@+id/Year_progress_bar_pages_read"
                                style="?android:progressBarStyleHorizontal"
                                android:max="1000"
                                android:progress="0"
                                android:secondaryProgress="1000"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:layout_gravity="center"
                                android:progressDrawable="@drawable/loading_circle"
                                />

                            <TextView
                                android:id="@+id/Year_pages_read"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0/1000"
                                android:textColor="?attr/TextColor"
                                android:textSize="20sp"
                                android:layout_marginBottom="15dp"
                                android:layout_gravity="center"
                                />

                            <TextView
                                android:id="@+id/Year_ppm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 ppm"
                                android:textColor="?attr/TextColor"
                                android:textSize="20sp"
                                android:layout_marginTop="15dp"
                                android:layout_gravity="center"
                                />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Books"
                        android:textColor="?attr/TitleColor"
                        android:textSize="20sp"
                        android:gravity="center"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        >


                        <ProgressBar
                            android:id="@+id/Year_Books_Read_ProgressBar"
                            style="?android:progressBarStyleHorizontal"
                            android:max="1000"
                            android:progress="0"
                            android:secondaryProgress="1000"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:progressDrawable="@drawable/loading_circle"
                            />


                        <TextView
                            android:id="@+id/Year_Books_Read"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/10"
                            android:textColor="?attr/TextColor"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:id="@+id/Year_Time_Read"
                android:textColor="?attr/TextColor"
                android:textSize="18sp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:animateLayoutChanges="true"
                android:background="@drawable/round_rectangle">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Favourite books of the year"
                    android:textColor="?attr/TitleColor"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true"
                    android:gravity="center"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="Title"
                                android:textColor="?attr/TextColor"
                                android:id="@+id/Year_favourite_Book1_Title"/>

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_height="130dp"
                                android:id="@+id/Year_favourite_Book1"
                                android:src="@drawable/book"
                                android:tint="?attr/colorAccent"
                                android:background="@drawable/round_rectangle"
                                android:elevation="6dp"
                                />

                            <RatingBar
                                android:id="@+id/Year_favourite_Book1_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxWidth="150dp"
                                android:numStars="5"
                                android:stepSize="0.5"

                                android:progressTint="?attr/starColor"
                                android:secondaryProgress="?attr/starColor"
                                android:secondaryProgressTint="?attr/starColorAccent"
                                android:progressBackgroundTint="@color/Light_Grey"

                                style="@style/Widget.AppCompat.RatingBar.Small"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="Title"
                                android:textColor="?attr/TextColor"
                                android:id="@+id/Year_favourite_Book2_Title"/>

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_height="130dp"
                                android:id="@+id/Year_favourite_Book2"
                                android:src="@drawable/book"
                                android:tint="?attr/colorAccent"
                                android:background="@drawable/round_rectangle"
                                android:elevation="6dp"
                                />

                            <RatingBar
                                android:id="@+id/Year_favourite_Book2_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxWidth="150dp"
                                android:numStars="5"
                                android:stepSize="0.5"

                                android:progressTint="?attr/starColor"
                                android:secondaryProgress="?attr/starColor"
                                android:secondaryProgressTint="?attr/starColorAccent"
                                android:progressBackgroundTint="@color/Light_Grey"

                                style="@style/Widget.AppCompat.RatingBar.Small"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="Title"
                                android:textColor="?attr/TextColor"
                                android:id="@+id/Year_favourite_Book3_Title"/>

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_height="130dp"
                                android:id="@+id/Year_favourite_Book3"
                                android:src="@drawable/book"
                                android:tint="?attr/colorAccent"
                                android:background="@drawable/round_rectangle"
                                android:elevation="6dp"
                                />

                            <RatingBar
                                android:id="@+id/Year_favourite_Book3_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxWidth="150dp"
                                android:numStars="5"
                                android:stepSize="0.5"

                                android:progressTint="?attr/starColor"
                                android:secondaryProgress="?attr/starColor"
                                android:secondaryProgressTint="?attr/starColorAccent"
                                android:progressBackgroundTint="@color/Light_Grey"

                                style="@style/Widget.AppCompat.RatingBar.Small"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Average rating"
                        android:textColor="?attr/TitleColor"
                        android:textSize="20dp"/>

                    <RatingBar
                        android:id="@+id/Year_avg_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="150dp"
                        android:numStars="5"
                        android:stepSize="0.5"

                        android:progressTint="?attr/starColor"
                        android:secondaryProgress="?attr/starColor"
                        android:secondaryProgressTint="?attr/starColorAccent"
                        android:progressBackgroundTint="@color/Light_Grey"
                        android:isIndicator="true"
                        />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:animateLayoutChanges="true"
                android:background="@drawable/round_rectangle"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other stats"
                    android:textColor="?attr/TitleColor"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Books read: "
                        android:textColor="?attr/TextColor"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Total_Books_read"
                        android:textColor="?attr/TitleColor"
                        android:textSize="15sp"
                        android:text="0"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pages read: "
                        android:textColor="?attr/TextColor"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Total_Pages_read"
                        android:textColor="?attr/TitleColor"
                        android:textSize="15sp"
                        android:text="0"/>
                </LinearLayout>

