<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="?attr/popupBackgroundColor">


    <include layout="@layout/toolbar_popups"
        android:id="@+id/popupToolbar"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/TextColor"
        android:gravity="center"
        android:textSize="15sp"
        android:text="What would you rate this book?"
        android:layout_marginBottom="15dp"/>


    <RatingBar
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="150dp"
        android:numStars="5"
        android:stepSize="0.5"

        android:progressTint="?attr/starColor"
        android:secondaryProgress="?attr/starColor"
        android:secondaryProgressTint="?attr/starColorAccent"
        android:progressBackgroundTint="@color/Light_Grey"

        style="@style/Widget.AppCompat.RatingBar"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:minWidth="20dp"
            android:background="@color/Transparant"
            android:textColor="?attr/TitleColor"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:text="Cancel" />

        <Button
            android:id="@+id/done_button"
            android:layout_width="wrap_content"
            android:minWidth="20dp"
            android:background="@color/Transparant"
            android:textColor="?attr/TitleColor"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:text="Done" />
    </LinearLayout>

</LinearLayout>