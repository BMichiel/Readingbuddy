<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor">

    <include layout="@layout/toolbar"
        android:id="@+id/myToolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thank you for downloading!\n"
            android:textColor="?attr/TitleColor"
            android:textSize="30sp"
            android:gravity="center_horizontal"/>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Icons"
            android:textColor="?attr/TitleColor"
            android:textSize="20sp"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Icons have been retrieved from www.flaticon.com. You can find the artists below.\n
Book icon: Good Ware\n
Books icon: mavadee\n
statistics icon: DinosoftLabs\n
Goal icon: Freepik\n
Plus icon: Freepik\n
Edit icon: Kiranshastry\n"
            android:textColor="?attr/TextColor"
            android:textSize="15sp"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Particle effect"
            android:textColor="?attr/TitleColor"
            android:textSize="20sp"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leonids library: https://github.com/plattysoft/Leonids\n"
            android:textColor="?attr/TextColor"
            android:textSize="15sp"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disclaimer"
            android:textColor="?attr/TitleColor"
            android:textSize="20sp"
            android:gravity="center_horizontal"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I have made this app without any android experience. This particular spagetti has not been implemented with any design in mind.\n"
            android:textColor="?attr/TextColor"
            android:textSize="15sp"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textColor="?attr/TitleColor"
            android:textSize="20sp"
            android:gravity="center_horizontal"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Code can be found at: \n
contact me at: readingbuddy1234@gmail.com\n"
            android:textColor="?attr/TextColor"
            android:textSize="15sp"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please rate this app in the app store\n"
            android:textColor="?attr/TitleColor"
            android:textSize="20dp"
            android:gravity="center_horizontal"/>

    </LinearLayout>
</LinearLayout>